{{!< main}}
<link rel="stylesheet" href="./style.scss">

<main class="auth">
    <h3 class="auth__header">Авторизация</h3>
    <form id="signinForm" method="POST" action="/signin">
        <div class="form-group">
            <label for="login">Логин:
                <input id="login" class="form-control" name="login" type="text" placeholder="login" required
                       pattern="[A-Za-z]\w+" minlength="4"
                       title="Латинские буквы, цифры и _">
            </label>
        </div>
        <div class="form-group">
            <label for="password">Пароль:
                <input id="password" class="form-control" name="password" placeholder="password" type="password"
                       required minlength="8">
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Войти</button>
        <button type="submit" class="btn btn-primary">
            <a href="../signup.hbs">Зарегистрироваться</a></button>
        <div class="">
            <button type="submit" class="btn btn-primary"><a href="../chat.hbs">Войти без регистрации</a></button>
        </div>
    </form>
</main>
